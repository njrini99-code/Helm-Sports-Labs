import React, { memo, useMemo } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { Player } from '../types/player';

interface PlayerListProps {
  players: Player[];
  onPlayerSelect: (player: Player) => void;
  selectedPlayer?: Player | null;
  loading?: boolean;
  searchTerm?: string;
  filters?: {
    position?: string[];
    ageRange?: [number, number];
    rating?: number;
  };
}

const PlayerCard = memo(({ 
  player, 
  isSelected, 
  onClick 
}: { 
  player: Player; 
  isSelected: boolean; 
  onClick: () => void; 
}) => (
  <motion.div
    initial={{ opacity: 0, y: 20 }}
    animate={{ opacity: 1, y: 0 }}
    exit={{ opacity: 0, y: -20 }}
    whileHover={{ scale: 1.02 }}
    whileTap={{ scale: 0.98 }}
    className={`
      relative p-4 rounded-xl cursor-pointer transition-all duration-300
      backdrop-blur-2xl bg-white/10 border border-white/15
      hover:bg-white/20 hover:border-white/25
      ${isSelected ? 'bg-blue-500/20 border-blue-400/50 shadow-lg shadow-blue-500/20' : ''}
    `}
    onClick={onClick}
  >
    <div className="flex items-center space-x-4">
      <div className="relative">
        <img
          src={player.avatar || '/default-player.png'}
          alt={player.name}
          className="w-12 h-12 rounded-full object-cover border-2 border-white/20"
        />
        {player.isAvailable && (
          <div className="absolute -top-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-white/20"></div>
        )}
      </div>
      
      <div className="flex-1 min-w-0">
        <h3 className="font-semibold text-white truncate">{player.name}</h3>
        <div className="flex items-center space-x-2 text-sm text-gray-300">
          <span>{player.position}</span>
          <span>•</span>
          <span>{player.age} years</span>
          <span>•</span>
          <span className="text-yellow-400">★ {player.rating}</span>
        </div>
        <p className="text-xs text-gray-400 mt-1">{player.team}</p>
      </div>
      
      <div className="text-right">
        <div className="text-sm font-medium text-white">
          ${player.marketValue?.toLocaleString() || 'N/A'}
        </div>
        <div className="text-xs text-gray-400">Market Value</div>
      </div>
    </div>
    
    {player.recentForm && (
      <div className="mt-3 flex items-center space-x-1">
        <span className="text-xs text-gray-400">Form:</span>
        {player.recentForm.map((result, index) => (
          <div
            key={index}
            className={`w-2 h-2 rounded-full ${
              result === 'W' ? 'bg-green-500' :
              result === 'D' ? 'bg-yellow-500' :
              'bg-red-500'
            }`}
          />
        ))}
      </div>
    )}
  </motion.div>
));

PlayerCard.displayName = 'PlayerCard';

const LoadingSkeleton = memo(() => (
  <div className="space-y-4">
    {Array.from({ length: 6 }).map((_, index) => (
      <div
        key={index}
        className="p-4 rounded-xl backdrop-blur-2xl bg-white/5 border border-white/10 animate-pulse"
      >
        <div className="flex items-center space-x-4">
          <div className="w-12 h-12 bg-white/10 rounded-full"></div>
          <div className="flex-1 space-y-2">
            <div className="h-4 bg-white/10 rounded w-3/4"></div>
            <div className="h-3 bg-white/10 rounded w-1/2"></div>
          </div>
          <div className="w-16 h-4 bg-white/10 rounded"></div>
        </div>
      </div>
    ))}
  </div>
));

LoadingSkeleton.displayName = 'LoadingSkeleton';

const PlayerList: React.FC<PlayerListProps> = memo(({
  players,
  onPlayerSelect,
  selectedPlayer,
  loading = false,
  searchTerm = '',
  filters = {}
}) => {
  const filteredPlayers = useMemo(() => {
    return players.filter(player => {
      // Search term filter
      if (searchTerm && !player.name.toLowerCase().includes(searchTerm.toLowerCase()) &&
          !player.team.toLowerCase().includes(searchTerm.toLowerCase()) &&
          !player.position.toLowerCase().includes(searchTerm.toLowerCase())) {
        return false;
      }

      // Position filter
      if (filters.position?.length && !filters.position.includes(player.position)) {
        return false;
      }

      // Age range filter
      if (filters.ageRange) {
        const [minAge, maxAge] = filters.ageRange;
        if (player.age < minAge || player.age > maxAge) {
          return false;
        }
      }

      // Rating filter
      if (filters.rating && player.rating < filters.rating) {
        return false;
      }

      return true;
    });
  }, [players, searchTerm, filters]);

  const handlePlayerClick = useMemo(() => {
    return (player: Player) => () => onPlayerSelect(player);
  }, [onPlayerSelect]);

  if (loading) {
    return (
      <div className="rounded-xl backdrop-blur-2xl bg-white/5 border border-white/15 p-6">
        <LoadingSkeleton />
      </div>
    );
  }

  if (filteredPlayers.length === 0) {
    return (
      <div className="rounded-xl backdrop-blur-2xl bg-white/5 border border-white/15 p-12 text-center">
        <div className="text-gray-400 mb-4">
          <svg className="mx-auto h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1} d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <h3 className="text-lg font-medium text-white mb-2">No players found</h3>
          <p>Try adjusting your search criteria or filters.</p>
        </div>
      </div>
    );
  }

  return (
    <div className="rounded-xl backdrop-blur-2xl bg-white/5 border border-white/15 p-6">
      <div className="flex items-center justify-between mb-6">
        <h2 className="text-xl font-bold text-white">
          Players ({filteredPlayers.length})
        </h2>
        
        <motion.div 
          className="text-sm text-gray-400"
          animate={{ opacity: [0.5, 1, 0.5] }}
          transition={{ duration: 2, repeat: Infinity }}
        >
          Live updates
        </motion.div>
      </div>
      
      <div className="space-y-3 max-h-[600px] overflow-y-auto pr-2 custom-scrollbar">
        <AnimatePresence mode="popLayout">
          {filteredPlayers.map((player) => (
            <PlayerCard
              key={player.id}
              player={player}
              isSelected={selectedPlayer?.id === player.id}
              onClick={handlePlayerClick(player)}
            />
          ))}
        </AnimatePresence>
      </div>
    </div>
  );
});

PlayerList.displayName = 'PlayerList';

export default PlayerList;