import React, { useState, useMemo } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { ChevronLeftIcon, ChevronRightIcon } from '@heroicons/react/24/outline';

interface Player {
  id: string;
  name: string;
  position: string;
  team: string;
  rating: number;
  age: number;
  nationality: string;
  marketValue: string;
  lastMatch: string;
  stats: {
    goals: number;
    assists: number;
    appearances: number;
  };
}

interface PlayerListProps {
  players: Player[];
  onPlayerSelect?: (player: Player) => void;
  itemsPerPage?: number;
}

const PlayerList: React.FC<PlayerListProps> = ({ 
  players, 
  onPlayerSelect,
  itemsPerPage = 10 
}) => {
  const [currentPage, setCurrentPage] = useState(1);

  const totalPages = Math.ceil(players.length / itemsPerPage);
  
  const paginatedPlayers = useMemo(() => {
    const startIndex = (currentPage - 1) * itemsPerPage;
    const endIndex = startIndex + itemsPerPage;
    return players.slice(startIndex, endIndex);
  }, [players, currentPage, itemsPerPage]);

  const handlePageChange = (page: number) => {
    if (page >= 1 && page <= totalPages) {
      setCurrentPage(page);
    }
  };

  const getVisiblePages = () => {
    const delta = 2;
    const range = [];
    const rangeWithDots = [];

    for (let i = Math.max(2, currentPage - delta); 
         i <= Math.min(totalPages - 1, currentPage + delta); 
         i++) {
      range.push(i);
    }

    if (currentPage - delta > 2) {
      rangeWithDots.push(1, '...');
    } else {
      rangeWithDots.push(1);
    }

    rangeWithDots.push(...range);

    if (currentPage + delta < totalPages - 1) {
      rangeWithDots.push('...', totalPages);
    } else if (totalPages > 1) {
      rangeWithDots.push(totalPages);
    }

    return rangeWithDots;
  };

  const getPositionColor = (position: string) => {
    switch (position.toLowerCase()) {
      case 'goalkeeper':
      case 'gk':
        return 'bg-yellow-500/20 text-yellow-300';
      case 'defender':
      case 'def':
        return 'bg-blue-500/20 text-blue-300';
      case 'midfielder':
      case 'mid':
        return 'bg-green-500/20 text-green-300';
      case 'forward':
      case 'att':
        return 'bg-red-500/20 text-red-300';
      default:
        return 'bg-gray-500/20 text-gray-300';
    }
  };

  const getRatingColor = (rating: number) => {
    if (rating >= 8.5) return 'text-emerald-400';
    if (rating >= 7.5) return 'text-green-400';
    if (rating >= 6.5) return 'text-yellow-400';
    if (rating >= 5.5) return 'text-orange-400';
    return 'text-red-400';
  };

  if (players.length === 0) {
    return (
      <div className="backdrop-blur-2xl bg-white/5 border border-white/15 rounded-2xl p-8 text-center">
        <p className="text-gray-400">No players found</p>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      {/* Player List */}
      <div className="backdrop-blur-2xl bg-white/5 border border-white/15 rounded-2xl overflow-hidden">
        <div className="overflow-x-auto">
          <table className="w-full">
            <thead>
              <tr className="border-b border-white/10">
                <th className="text-left p-4 text-sm font-medium text-gray-300">Player</th>
                <th className="text-left p-4 text-sm font-medium text-gray-300">Position</th>
                <th className="text-left p-4 text-sm font-medium text-gray-300">Team</th>
                <th className="text-center p-4 text-sm font-medium text-gray-300">Rating</th>
                <th className="text-center p-4 text-sm font-medium text-gray-300">Age</th>
                <th className="text-left p-4 text-sm font-medium text-gray-300">Value</th>
                <th className="text-center p-4 text-sm font-medium text-gray-300">Stats</th>
              </tr>
            </thead>
            <tbody>
              <AnimatePresence mode="wait">
                {paginatedPlayers.map((player, index) => (
                  <motion.tr
                    key={player.id}
                    initial={{ opacity: 0, y: 20 }}
                    animate={{ opacity: 1, y: 0 }}
                    exit={{ opacity: 0, y: -20 }}
                    transition={{ duration: 0.3, delay: index * 0.05 }}
                    className="border-b border-white/5 hover:bg-white/5 transition-colors duration-200 cursor-pointer"
                    onClick={() => onPlayerSelect?.(player)}
                  >
                    <td className="p-4">
                      <div>
                        <div className="font-medium text-white">{player.name}</div>
                        <div className="text-sm text-gray-400">{player.nationality}</div>
                      </div>
                    </td>
                    <td className="p-4">
                      <span className={`px-2 py-1 rounded-full text-xs font-medium ${getPositionColor(player.position)}`}>
                        {player.position}
                      </span>
                    </td>
                    <td className="p-4 text-gray-300">{player.team}</td>
                    <td className="p-4 text-center">
                      <span className={`font-bold ${getRatingColor(player.rating)}`}>
                        {player.rating.toFixed(1)}
                      </span>
                    </td>
                    <td className="p-4 text-center text-gray-300">{player.age}</td>
                    <td className="p-4 text-gray-300">{player.marketValue}</td>
                    <td className="p-4">
                      <div className="text-center text-sm">
                        <div className="text-green-400">{player.stats.goals}G</div>
                        <div className="text-blue-400">{player.stats.assists}A</div>
                        <div className="text-gray-400 text-xs">{player.stats.appearances} apps</div>
                      </div>
                    </td>
                  </motion.tr>
                ))}
              </AnimatePresence>
            </tbody>
          </table>
        </div>
      </div>

      {/* Pagination */}
      {totalPages > 1 && (
        <motion.div 
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="flex items-center justify-between backdrop-blur-2xl bg-white/5 border border-white/15 rounded-2xl p-4"
        >
          <div className="text-sm text-gray-400">
            Showing {((currentPage - 1) * itemsPerPage) + 1} to{' '}
            {Math.min(currentPage * itemsPerPage, players.length)} of {players.length} players
          </div>

          <div className="flex items-center space-x-2">
            {/* Previous Button */}
            <motion.button
              whileHover={{ scale: 1.05 }}
              whileTap={{ scale: 0.95 }}
              onClick={() => handlePageChange(currentPage - 1)}
              disabled={currentPage === 1}
              className={`p-2 rounded-lg border transition-all duration-200 ${
                currentPage === 1
                  ? 'border-white/10 text-gray-500 cursor-not-allowed'
                  : 'border-white/15 text-white hover:bg-white/10'
              }`}
            >
              <ChevronLeftIcon className="w-4 h-4" />
            </motion.button>

            {/* Page Numbers */}
            <div className="flex items-center space-x-1">
              {getVisiblePages().map((page, index) => (
                <React.Fragment key={index}>
                  {page === '...' ? (
                    <span className="px-3 py-2 text-gray-500">...</span>
                  ) : (
                    <motion.button
                      whileHover={{ scale: 1.05 }}
                      whileTap={{ scale: 0.95 }}
                      onClick={() => handlePageChange(page as number)}
                      className={`px-3 py-2 rounded-lg border text-sm font-medium transition-all duration-200 ${
                        currentPage === page
                          ? 'border-blue-400/50 bg-blue-500/20 text-blue-300'
                          : 'border-white/15 text-gray-300 hover:bg-white/10 hover:text-white'
                      }`}
                    >
                      {page}
                    </motion.button>
                  )}
                </React.Fragment>
              ))}
            </div>

            {/* Next Button */}
            <motion.button
              whileHover={{ scale: 1.05 }}
              whileTap={{ scale: 0.95 }}
              onClick={() => handlePageChange(currentPage + 1)}
              disabled={currentPage === totalPages}
              className={`p-2 rounded-lg border transition-all duration-200 ${
                currentPage === totalPages
                  ? 'border-white/10 text-gray-500 cursor-not-allowed'
                  : 'border-white/15 text-white hover:bg-white/10'
              }`}
            >
              <ChevronRightIcon className="w-4 h-4" />
            </motion.button>
          </div>
        </motion.div>
      )}
    </div>
  );
};

export default PlayerList;