import React from 'react';
import { motion } from 'framer-motion';

interface Player {
  id: string;
  name: string;
  position: string;
  team: string;
  age: number;
  nationality: string;
  rating: number;
  photo?: string;
  stats: {
    goals: number;
    assists: number;
    appearances: number;
    minutesPlayed: number;
  };
  marketValue?: number;
  contractExpiry?: string;
}

interface PlayerCardProps {
  player: Player;
  onClick?: (player: Player) => void;
  className?: string;
}

const PlayerCard: React.FC<PlayerCardProps> = ({ player, onClick, className }) => {
  const handleClick = () => {
    if (onClick) {
      onClick(player);
    }
  };

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      whileHover={{ y: -4, scale: 1.02 }}
      whileTap={{ scale: 0.98 }}
      transition={{ duration: 0.3, ease: "easeOut" }}
      className={`relative overflow-hidden rounded-xl backdrop-blur-2xl bg-white/10 border border-white/15 cursor-pointer group hover:border-white/25 transition-all duration-300 ${className || ''}`}
      onClick={handleClick}
    >
      <div className="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
      
      <div className="relative p-6">
        <div className="flex items-start space-x-4">
          <div className="flex-shrink-0">
            {player.photo ? (
              <img
                src={player.photo}
                alt={player.name}
                className="w-16 h-16 rounded-full object-cover border-2 border-white/20"
              />
            ) : (
              <div className="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center border-2 border-white/20">
                <span className="text-white/80 font-semibold text-lg">
                  {player.name.charAt(0)}
                </span>
              </div>
            )}
          </div>
          
          <div className="flex-1 min-w-0">
            <div className="flex items-start justify-between">
              <div>
                <h3 className="text-lg font-semibold text-white truncate">
                  {player.name}
                </h3>
                <p className="text-white/70 text-sm">
                  {player.position} • {player.team}
                </p>
                <p className="text-white/60 text-xs mt-1">
                  {player.nationality} • Age {player.age}
                </p>
              </div>
              
              <div className="flex-shrink-0 text-right">
                <div className="bg-white/10 rounded-lg px-2 py-1 backdrop-blur-sm">
                  <span className="text-white font-semibold text-sm">
                    {player.rating}
                  </span>
                </div>
              </div>
            </div>
            
            <div className="mt-4 grid grid-cols-2 gap-4">
              <div className="text-center p-2 rounded-lg bg-white/5 backdrop-blur-sm">
                <div className="text-white font-semibold">{player.stats.goals}</div>
                <div className="text-white/60 text-xs">Goals</div>
              </div>
              <div className="text-center p-2 rounded-lg bg-white/5 backdrop-blur-sm">
                <div className="text-white font-semibold">{player.stats.assists}</div>
                <div className="text-white/60 text-xs">Assists</div>
              </div>
            </div>
            
            <div className="mt-3 flex items-center justify-between text-xs text-white/60">
              <span>{player.stats.appearances} Apps</span>
              <span>{Math.floor(player.stats.minutesPlayed / 60)}h {player.stats.minutesPlayed % 60}m</span>
            </div>
            
            {player.marketValue && (
              <div className="mt-3 pt-3 border-t border-white/10">
                <div className="text-xs text-white/60">Market Value</div>
                <div className="text-sm font-semibold text-white">
                  €{player.marketValue.toLocaleString()}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
      
      <div className="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-500/50 to-purple-500/50 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300" />
    </motion.div>
  );
};

export default PlayerCard;