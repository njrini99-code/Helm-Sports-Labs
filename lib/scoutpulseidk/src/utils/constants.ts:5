export const API_BASE_URL = process.env.REACT_APP_API_BASE_URL || 'https://api.scoutpulse.com';
export const WS_BASE_URL = process.env.REACT_APP_WS_BASE_URL || 'wss://ws.scoutpulse.com';
export const APP_NAME = process.env.REACT_APP_NAME || 'ScoutPulse';
export const APP_VERSION = process.env.REACT_APP_VERSION || '1.0.0';
export const DEFAULT_TIMEOUT = parseInt(process.env.REACT_APP_DEFAULT_TIMEOUT || '5000');
export const MAX_FILE_SIZE = parseInt(process.env.REACT_APP_MAX_FILE_SIZE || '10485760'); // 10MB
export const SUPPORTED_FILE_TYPES = process.env.REACT_APP_SUPPORTED_FILE_TYPES?.split(',') || [
  'image/jpeg',
  'image/png',
  'image/webp',
  'application/pdf'
];

